#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    int n;
    scanf("%d", &n);
    switch(n){
        case 1:
            printf("    *\n   * *\n  *   *\n *     *\n*********\n");
            break;
        case 2:
            printf("    *\n   ***\n  *****\n *******\n*********\n");
            break;
        case 3:
            printf("*********\n *******\n  *****\n   ***\n    *\n");
            break;
    }
	return 0;
}
